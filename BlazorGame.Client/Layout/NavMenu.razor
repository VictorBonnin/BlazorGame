@using Microsoft.AspNetCore.Components.Routing

<nav class="topnav">
  <div class="topnav-inner">
    <div class="brand">
      <NavLink href="/" class="brand-link">Blazor Game Quest</NavLink>
    </div>

    <button class="hamburger" @onclick="Toggle" aria-label="Menu">
      <span></span><span></span><span></span>
    </button>

    <div class="links @(open ? "open" : null)">
      <NavLink href="/"            class="navlink" Match="NavLinkMatch.All">Accueil</NavLink>
      <NavLink href="/newadventure" class="navlink">Nouvelle aventure</NavLink>
      <NavLink href="/leaderboard"  class="navlink">Classement</NavLink>
      <NavLink href="/admin"        class="navlink">Admin</NavLink>
    </div>
  </div>
</nav>

@code {
  bool open = false;
  void Toggle() => open = !open;
}

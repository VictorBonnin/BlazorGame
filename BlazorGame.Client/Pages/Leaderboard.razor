@page "/leaderboard"

<div class="page container-narrow">
  <div class="d-flex align-items-center mb-3">
    <h2 class="display-5 m-0">🏆 Classement</h2>
  </div>

  <div class="card p-3">
    <table class="table table-striped align-middle">
      <thead>
        <tr>
          <th>#</th>
          <th>Joueur</th>
          <th class="text-end">Score</th>
        </tr>
      </thead>
      <tbody>
        @for (var i = 0; i < players.Count; i++)
        {
            var p = players[i];
            <tr>
              <td>
                @(i == 0 ? "🥇" : i == 1 ? "🥈" : i == 2 ? "🥉" : (i+1).ToString())
              </td>
              <td><strong>@p.Name</strong></td>
              <td class="text-end">@p.Score</td>
            </tr>
        }
      </tbody>
    </table>

    <div class="mt-3 text-end">
      <NavLink class="btn btn-outline-primary" href="/newadventure">Tenter de battre le score</NavLink>
    </div>
  </div>
</div>
